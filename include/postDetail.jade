//- 文章详情

.detail
	article.post
		section.content
			h1.title= post.title
			if not post.metadata.password or request.form.password|string == post.metadata.password|string
				.post_body= post.content
			else
				.password_detail
					include include/passwordForm
					if request.form.password|string
						#pwd_alert
							if post.metadata.hint
								|答案
							else
								|密码
							|错误！
			.info.clearfix
				.date
					.icon-icon_clock
					time
						{{post.date.format('%Y-%m-%d %H:%M')}}
				if post.tags
					.tags
						for tag in post.tags
							a(href="/tag/{{tag}}")= tag
			
			#post_follow
				p 关注作者
				.post_follow_button_box
					a.post_follow_weibo(href="http://weibo.com/xuyafei86")
					a.post_follow_github(href="https://github.com/xiaofei86")
					a.post_follow_jianshu(href="http://www.jianshu.com/users/2555924d8c6e")

			//- 分享代码
			#baidu_share
				p 分享本文
				.bdsharebuttonbox
					a.bds_tsina(data-cmd="tsina", title="分享到新浪微博")
					a.bds_weixin(data-cmd="weixin", title="分享到微信")
					a.bds_douban(data-cmd="douban", title="分享到豆瓣网")
					a.bds_twi(data-cmd="twi", title="分享到Twitter")
					a.bds_fbook(data-cmd="fbook", title="分享到Facebook")
