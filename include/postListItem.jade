.content
    h1.title
        a(href=post.url)= post.title
    .post_body= post.content.opening or post.content.limit(300)
    .info.clearfix
        if request.url_without_host == "/" and post.metadata.pin
            .pin="置顶"
        .date
            .icon-icon_clock
            time
                {{post.date.format('%Y-%m-%d')}}
        if post.tags
            .tags
                for tag in post.tags
                    a(href="/tag/{{tag}}")= tag